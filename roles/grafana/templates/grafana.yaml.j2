apiVersion: v1
kind: ConfigMap
metadata:
  name: grafana-datasources
data:
  zabbix-datasource.yml: |
    apiVersion: 1
    datasources:
      - name: Zabbix
        type: alexanderzobnin-zabbix-datasource
        access: proxy
        url: http://zabbix-web
        isDefault: true
        jsonData:
          username: Admin
          trends: "7d"
          cacheDuration: "1m"
        secureJsonData:
          password: zabbix
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: grafana-dashboards
data:
  dashboards.yml: |
    apiVersion: 1
    providers:
      - name: 'zabbix-mysql-ha'
        orgId: 1
        type: file
        disableDeletion: false
        editable: true
        options:
          path: /var/lib/grafana/dashboards
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: grafana-dashboards-json
data:
  zabbix-mysql-ha.json: |
    {
      "id": null,
      "uid": "zbx-mysql-ha",
      "title": "Zabbix / MySQL / HA Cluster Overview",
      "schemaVersion": 38,
      "version": 1,
      "time": {
        "from": "now-6h",
        "to": "now"
      },
      "timepicker": {
        "refresh_intervals": ["10s","30s","1m","5m","15m","30m","1h"]
      },
      "panels": [
        {
          "type": "graph",
          "title": "Zabbix Server Queue (5m)",
          "id": 1,
          "datasource": "Zabbix",
          "targets": [
            {
              "group": { "filter": "/.*/" },
              "host": { "filter": "Zabbix server" },
              "application": { "filter": "Zabbix server" },
              "item": { "filter": "Zabbix queue*" },
              "resultFormat": "time_series",
              "refId": "A"
            }
          ],
          "lines": true,
          "linewidth": 1,
          "nullPointMode": "connected",
          "yaxes": [
            { "format": "short", "logBase": 1 },
            { "format": "short", "logBase": 1 }
          ]
        },
        {
          "type": "graph",
          "title": "MySQL Connections",
          "id": 2,
          "datasource": "Zabbix",
          "targets": [
            {
              "group": { "filter": "/.*/" },
              "host": { "filter": "MySQL*" },
              "application": { "filter": "MySQL" },
              "item": { "filter": "Threads connected*" },
              "resultFormat": "time_series",
              "refId": "A"
            }
          ],
          "lines": true,
          "linewidth": 1,
          "nullPointMode": "connected",
          "yaxes": [
            { "format": "short", "logBase": 1 },
            { "format": "short", "logBase": 1 }
          ]
        },
        {
          "type": "graph",
          "title": "HAProxy Backend Status (Zabbix + MySQL)",
          "id": 3,
          "datasource": "Zabbix",
          "targets": [
            {
              "group": { "filter": "/.*/" },
              "host": { "filter": "HAProxy*" },
              "application": { "filter": "HAProxy backend" },
              "item": { "filter": "Backend status*" },
              "resultFormat": "time_series",
              "refId": "A"
            }
          ],
          "lines": true,
          "linewidth": 1,
          "nullPointMode": "connected",
          "yaxes": [
            { "format": "short", "logBase": 1 },
            { "format": "short", "logBase": 1 }
          ]
        }
      ]
    }
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: grafana
spec:
  replicas: 1
  selector:
    matchLabels:
      app: grafana
  template:
    metadata:
      labels:
        app: grafana
    spec:
      containers:
        - name: grafana
          image: {{ grafana_image }}
          ports:
            - containerPort: 3000
              name: http
          env:
            - name: GF_SECURITY_ADMIN_USER
              value: "{{ grafana_admin_user }}"
            - name: GF_SECURITY_ADMIN_PASSWORD
              value: "{{ grafana_admin_password }}"
            - name: GF_INSTALL_PLUGINS
              value: "alexanderzobnin-zabbix-app"
          volumeMounts:
            - name: grafana-datasources
              mountPath: /etc/grafana/provisioning/datasources
            - name: grafana-dashboards
              mountPath: /etc/grafana/provisioning/dashboards
            - name: grafana-dashboard-files
              mountPath: /var/lib/grafana/dashboards
      volumes:
        - name: grafana-datasources
          configMap:
            name: grafana-datasources
        - name: grafana-dashboards
          configMap:
            name: grafana-dashboards
        - name: grafana-dashboard-files
          configMap:
            name: grafana-dashboards-json
---
apiVersion: v1
kind: Service
metadata:
  name: grafana
spec:
  type: {{ grafana_service_type }}
  selector:
    app: grafana
  ports:
    - name: http
      port: 3000
      targetPort: 3000
